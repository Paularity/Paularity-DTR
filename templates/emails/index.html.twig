{% extends "base.html.twig" %}

{% block title %}My Timecard{% endblock %}

{% block body %}
    <div class="row">
        {# you can read and display just one flash message type... #}
        {% for message in app.flashes('notice') %}
            <div class="col-12 mt-2 alert alert-success flash-notice">
                <span><i class="fa fa-info-circle"></i></span> {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="col-12 mt-2 alert alert-danger flash-error">
                <span><i class="fa fa-exclamation-circle"></i></span> {{ message }}
            </div>
        {% endfor %}

        <p class="display-4 my-5"> <span><i class="fa fa-business-time"></i></span> My Timecard</p>
        <div class="col-12 p-0 mt-2 mb-2">
            <div class="table-responsive">
                <table class="table table-striped table-bordered rounded">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Time In</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for record in records %}
                            <tr>
                                <th scope="row">{{ record.timein|date('l, M d Y') }}</th>
                                <td>
                                    {{ record.timein|date('h:i:s a') }} 
                                    <div class="float-right" id="actions">
                                        {% if record.sent == false %}
                                        <a href="{{ path('email_send', {'id': record.id}) }}" class="mr-2"><span><i class="fa fa-share-square"></i></span></a>
                                        <a href="{{ path('email_edit', {'id': record.id}) }}" class="mr-2 text-success"><span><i class="fa fa-edit"></i></span></a>    
                                        {% endif %}

                                        <a href="{{ path('email_delete', {'id': record.id}) }}" class="text-danger"><span><i class="fa fa-times"></i></span></a> </td>
                                    </div>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td colspan="3" class="text-right">
                                <a href="{{ path('email_new') }}" class="btn btn-dark">Punch In <span class="btn-punch-out"><i class="fa fa-angle-right"></i></span> </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="pagination">
                {{ knp_pagination_render(records) }}
            </div>
        </div>
    </div>
    <div class="col-12">
        <h4>Guide:</h4>
        <p>Press <a href="#" class="btn btn-dark">Punch In <span class="btn-punch-out"><i class="fa fa-angle-right"></i></span> </a> to record attendance.</p>
        <p>Press <span><i class="fa fa-share-square text-primary"></i></span> to send email.</p>
        <p>Press <span><i class="fa fa-edit text-success"></i></span> to edit data.</p>
        <p>Press <span><i class="fa fa-times text-danger"></i></span> to delete data permanently.</p>
        {# <p>Data can only be edited if email not sent.</p>
        <p>Data can only be send by email once.</p> #}
    </div>
{% endblock %}